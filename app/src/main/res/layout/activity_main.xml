<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_purple"
    android:id="@+id/phone"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello from Rawad!"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@color/white"
        android:text="Click to change text color"
        android:textColor="@color/black"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:textSize="26sp" />

    <TextView
        android:layout_above="@id/button"
        android:id="@+id/bgcolor"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change the background color" />

    <TextView
        android:layout_above="@id/bgcolor"
        android:id="@+id/changetext"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click to change text" />

    <EditText
        android:layout_above="@+id/ChangeToCustom"
        android:layout_centerHorizontal="true"
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Type A Message" />

    <TextView
        android:layout_above="@+id/changetext"
        android:id="@+id/ChangeToCustom"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click to custom message" />


</RelativeLayout>